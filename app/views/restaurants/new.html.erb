<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :phone_number %>
      <%= f.input :address %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]  %>
      <%= f.submit "Add New Restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
